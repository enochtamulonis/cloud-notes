<div class="max-w-md w-full mx-auto h-full">
  <h1 class="font-bold text-4xl text-purple-400">Sign in</h1>

  <div class="py-6">
    <%= form_with url: authentication_path do |f| %>
      <div class="w-full flex flex-col">
        <div class="flex text-gray-200">
          <%= f.label :login %>
          <span class="ml-1 text-sm"> (username or email) </span>
        </div>
        <%= f.text_field :login %>
        <%= f.label :password, class: "text-gray-200 mt-6" %>
        <%= f.password_field :password %>
        <%= f.submit "Sign in", class: "text-green-100 bg-green-500 hover:bg-green-600 hover:text-green-200 transition-all duration-250 cursor-pointer py-3 mt-6" %>
      </div>
    <% end %>
  </div>

  <div class="w-full grid gap-y-4">
    <%= link_to "Sign in with Wavclouds", "#", class: "bg-indigo-500 hover:bg-indigo-600 text-indigo-50 hover:text-indigo-200 w-full py-3 text-center" %>
    <%= link_to "Create account", new_registration_path, class: "text-gray-200" %>
  </div>
</div>
